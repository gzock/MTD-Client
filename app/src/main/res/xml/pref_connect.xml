<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="connect_server_ipaddress"
        android:title="@string/pref_title_connect_server_ipaddress"
        android:defaultValue="@string/pref_default_connect_server_ipaddress"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="connect_server_port"
        android:title="@string/pref_title_connect_server_port"
        android:defaultValue="@string/pref_default_connect_server_port"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>